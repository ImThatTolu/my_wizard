{#
/**
 * @file
 * Theme override to display my wizard.
 *
 * Available variables:
 * - Pages
 *  - title: title of the page
 *  - body: render array Markup that acts as the body
 *
 * @see template_preprocess_my_wizard()
 */
#}

<div class="my-wizard">
  <div class="my-wizard--page-wrapper">
    {% for page in pages %}
      {%
        set classes = [
          'my-wizard--page',
          not loop.first ? 'hidden',
        ]
      %}

      <div {{ attributes.addClass(classes) }}>
        <div class="page--title-wrapper">
          <h1 class="title">{{ page.title }}</h1>
        </div>
        <div class="page--body-wrapper">
          {{ page.body }}
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="my-wizard--nav-wrapper">
    <p class="nav-info">
      <span class="my-wizard--current-page">1</span> /
      <span class="my-wizard--total-pages">{{ pages|length }}</span>
    </p>

    <button type="button" class="my-wizard--previous-page">Previous</button>
    <button type="button" class="my-wizard--next-page">Next</button>
  </div>
</div>
